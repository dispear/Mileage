<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecycleInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bottomline"
                android:gravity="center"
                android:text="분리배출정보"
                android:textAlignment="center"
                android:textSize="40dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/camera" />

            <SearchView
                android:id="@+id/tSearch"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="#E8E7E7" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="3">

                <Button
                    android:id="@+id/btn_paper"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/paper"
                    android:text="종이류" />

                <Button
                    android:id="@+id/btn_metal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/steel"
                    android:text="금속류" />

                <Button
                    android:id="@+id/btn_glass"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/bottle"
                    android:text="유리병류" />

                <Button
                    android:id="@+id/btn_plastic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/plastic"
                    android:text="플라스틱류" />

                <Button
                    android:id="@+id/btn_vinyl"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/plasticbag"
                    android:text="비닐류" />

                <Button
                    android:id="@+id/btn_styrofoam"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/sponge"
                    android:text="스티로폼" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@tools:sample/avatars" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>